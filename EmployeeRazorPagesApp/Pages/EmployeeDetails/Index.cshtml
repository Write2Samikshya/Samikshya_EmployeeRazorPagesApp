@page

@model EmployeeRazorPagesApp.Pages.EmployeeDetails.IndexModel
@{


}

@*<h4>@Model.EmpProperty.Count()</h4>*@

<style>
    .btn{
       width:75px;

    }
</style>

<div class="card-deck">
    @foreach(var employee in Model.EmpProperty)
    {
        var photopath = "~/Images/" + (employee.Photopath ?? "default.jpg");

        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imagethumbnail" src="@photopath"
                 asp-append-version="true" />
            <div class="card-footer text-center">
                @*<a href="#" class="btn btn-primary m-1">View</a>*@

                <a asp-page="/EmployeeDetails/Details"asp-route-ID="@employee.ID" 
                   class="btn btn-primary m-1">View</a>

                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>

            </div>
        </div>

    }

</div>