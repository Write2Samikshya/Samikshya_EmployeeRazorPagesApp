<form method="post" class="mt-3" enctype="multipart/form-data" >
@*Use hidden input elements to store employee id which
    we need when we submit the form*@
<input hidden asp-for="EmpPropertyEdit2.ID" />

@*asp-for tag helper takes care of displaying the existing
    data in the respective input elements*@
<div class="form-group row">
    <label asp-for="EmpPropertyEdit2.Name" class="col-sm-2 col-form-label">
    </label>
    <div class="col-sm-10">
        <input asp-for="EmpPropertyEdit2.Name" class="form-control" placeholder="Name">
    </div>
</div>
<div class="form-group row">
    <label asp-for="EmpPropertyEdit2.Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="EmpPropertyEdit2.Email" class="form-control" placeholder="Email">
    </div>
</div>

<div class="form-group row">
    <label asp-for="EmpPropertyEdit2.Department" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="EmpPropertyEdit2.Department" class="custom-select mr-sm-2"
                asp-items="Html.GetEnumSelectList<Dept>()">
            <option value="">Please Select</option>
        </select>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="/EmployeeDetails/Index" class="btn btn-primary">Cancel</a>
    </div>
</div>
</form>
