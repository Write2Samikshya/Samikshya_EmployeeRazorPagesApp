@page
@model EmployeeRazorPagesApp.Pages.EmployeeDetails.DetailsModel
@{

    ViewData["Title"] = "Details";
    var photopath = "~/Images/" + (Model.EmpPropertydeatils.Photopath ?? "default.jpg");
}
<style>

    .btn{

        width:80px;
    }

</style>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.EmpPropertydeatils.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photopath" asp-append-version="true"/>
                <h4>Employee_ID : @Model.EmpPropertydeatils.ID</h4>
                <h4>Email:        @Model.EmpPropertydeatils.Email</h4>
                <h4>Department:   @Model.EmpPropertydeatils.Department</h4>

            </div>

            <div class="card-footer text-center">
                <a asp-page="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">EDIT</a>
                <a href="#" class="btn btn-danger">DELETE</a>

            </div>

        </div>
    </div>
</div>