@page
@model EmployeeRazorPagesApp.Pages.EmployeeDetails.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h1> Edit Employee </h1>

<form method="post" class="mt-3">
    <input hidden asp-for="EmployeeEditProperty.ID" />

    <div class="form-group row">
        <label asp-for="EmployeeEditProperty.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EmployeeEditProperty.Name" class="form-control"placeholder="Name" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="EmployeeEditProperty.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EmployeeEditProperty.Email" class="form-control" placeholder="Email" />
        </div>
    </div>

    <div class="form-group row">
    <label asp-for="EmployeeEditProperty.Department" class="col-sm-2 col-form-label">
    </label>
        <div class="col-sm-10">
            <select asp-for="EmployeeEditProperty.Department" class="custom-select mr-sm-2"
                asp-items="Html.GetEnumSelectList<Dept>()">
                <option Value="">Please Select</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="/EmployeeDetails/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

